<!-- -->
<launch>
  <arg name='host' default='localhost'/>
  <arg name='port' default='2000'/>

  <arg name='town' default='Town05'/>
  <arg name='role_name' default='ego_vehicle'/>
  <arg name="vehicle_filter" default='vehicle.toyota.prius*' />
  <!--arg name='spawn_point' default=''/-->
  <!-- use comma separated format "x,y,z,roll,pitch,yaw" -->
  <!--Town05-exp-->
  <arg name='spawn_point' default='140.2,-2.5,1.0,0,0,180'/>
  <arg name="goal_point" default='' />

  <arg name="sensor_definition_file" default='$(find carla_autoware_bridge)/config/sensors.json'/>
  <arg name="map_path" default="$(find carla_autoware_bridge)/autoware-contents/maps/point_cloud_maps"/>
  <arg name="waypoint_path" default="$(find carla_autoware_bridge)/waypoint/Town05_waypoints.csv"/>

  <!--
    ##############################
    # ros - autoware                #
    ##############################
  -->
  <!-- world to map tf -->
  <node pkg="tf"  type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 /world /map 10" />

  <!-- ros-bridge -->
  <include file="$(find carla_ros_bridge)/launch/carla_ros_bridge.launch">
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name='town' value='$(arg town)'/>
  </include>

  <!-- carla autoware ego vehicle -->
  <include file="$(find carla_ego_vehicle)/launch/carla_ego_vehicle.launch" >
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name='vehicle_filter' value='$(arg vehicle_filter)'/>
    <arg name="sensor_definition_file" value='$(arg sensor_definition_file)'/>
    <arg name='role_name' value='$(arg role_name)'/>
    <arg name='spawn_point' value='$(arg spawn_point)'/>
  </include>

  <!--
    ##############################
    # Map loading                #
    ##############################
  -->
  <include file="$(find carla_autoware_bridge)/launch/carla_points_map_loader.launch">
      <arg name="maps_path" value="$(arg map_path)"/>
  </include>

  <!--
    ##############################
    #carla helper                #
    ##############################
  -->
  <node pkg='carla_autoware_bridge' type='carla_waypoint_publisher_node' name='carla_waypoint_publisher'>
      <param name="waypoint_path" value="$(arg waypoint_path)"/>
  </node>
  <node pkg='carla_autoware_bridge' type='fake_ndt_node' name='fake_ndt'/>


  <!--
    ##############################
    # Open Planner                #
    ##############################
  -->
  <!-- <include file="$(find carla_autoware_bridge)/openPlanner_launch/my_common_params.launch"/> -->
  <!-- <include file="$(find carla_autoware_bridge)/openPlanner_launch/my_open_planner.launch"/> -->
  <!-- <include file="$(find carla_autoware_bridge)/openPlanner_launch/my_path_follower.launch"/> -->

</launch>
